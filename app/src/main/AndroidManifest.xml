<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alienpants.puzzlepipes"
    xmlns:tools="http://schemas.android.com/tools"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.alienpants.puzzlepipes.activities.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.alienpants.puzzlepipes.activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.alienpants.puzzlepipes.activities.SettingsActivity" />
        <activity android:name="com.alienpants.puzzlepipes.activities.GameActivity" />
        <activity android:name="com.alienpants.puzzlepipes.activities.AboutActivity" />

    </application>

</manifest>